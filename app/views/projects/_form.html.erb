
<%= bootstrap_form_for(@project) do |f| %>
  <% if @project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% @project.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.text_area :description %>
  </div>
  <%= f.form_group do %>
  <div class="field">
    <%= f.text_field :start_date, "data-provide" => 'datepicker', icon: "calendar" %>
  </div>
  <div class="field">
     <%= f.text_field :due_date, "data-provide" => 'datepicker', icon: "calendar" %>
  </div>
  <% end %>
  <div class="field">
    <%= f.select :project_status, options_for_select(["Active", "Inactive", "Escalated"], "Active") %>
  </div>
  <div class="field">

    <%= f.text_field :project_revenue, :prepend => '$', :append => ".00" %>
  </div>
  <div class="field">

  <%= f.select :client_id, options_for_select(Client.all.map{|s|[s.name, s.id]}) %>
</div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
